FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt streamlit

COPY . .

# Set PYTHONPATH so relative imports work when Streamlit runs the script
ENV PYTHONPATH=/app/src

EXPOSE 8501

CMD ["streamlit", "run", "src/monitorx/dashboard/app.py", "--server.port=8501", "--server.address=0.0.0.0"]
